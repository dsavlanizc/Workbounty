@model List<Workbounty.Models.TeamInformation>
@{
    ViewBag.Title = "AddMember";
    Layout = "~/Views/_DashboardLayout.cshtml";
}

<div class="widget-box transparent" id="recent-box">
    <div class="widget-header">
        <div class="col-xs-10">
            <h4 class="widget-title lighter smaller" data_toggle="tooltip" , title="Add team & members">
                Team |
                @Html.ActionLink("Add Team", "addteam", "Team")
            </h4>

            @foreach (var item in Model)
            {
              <input type="hidden" value="@item.TeamUserInfoID" id="TeamInfoID"/>
                <table id="simple-table" class="table table-striped table-bordered table-hover">
                    <tbody>
                        <tr>
                            <th>Member</th>
                            <th>Email</th>
                            <th>Contact No</th>
                            <th>Action</th>
                        </tr>
                        @foreach (var user in item.TeamUserList)
                        {
                            <tr>
                                <td>@Html.DisplayFor(s => user.FirstName)</td>
                                <td>@Html.DisplayFor(s => user.Email)</td>
                                <td>@Html.DisplayFor(s => user.PhoneNumber)</td>
                                <td><input type="button" id="@user.UserID" value="Delete Member" onclick="add(this);" class="btn btn-minier btn-purple" data_toggle="tooltip" , title="Delete team member"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="col-xs-10">

        </div>
    </div>
</div>

