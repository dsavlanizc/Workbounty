@model List<Workbounty.Models.Rewards>
       @{
    ViewBag.Title = "ViewRewards";
    Layout = "~/Views/_DashboardLayout.cshtml";
}


<h2></h2>
<div class="widget-box transparent" id="recent-box">
    <div class="widget-header">
        <div class="col-xs-8">
            <h4 class="widget-title lighter smaller">
                My Rewards

            </h4>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <table id="simple-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Work</th>
                            <th>Client Name</th>
                            <th> Reward Item</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>

                                <td>@Html.DisplayFor(a => item.Title)</td>
                                <td>@Html.DisplayFor(a => item.FirstName)</td>
                                <td>@Html.DisplayFor(a => item.ProposedReward)</td>
                                <td>@Html.DisplayFor(a => item.Amount)</td>
                               
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
        
    </div>
</div>

