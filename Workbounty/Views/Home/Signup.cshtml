@model Workbounty.UserInfo
       @{
    ViewBag.Title = "Signup";
    Layout = "~/Views/_IndexLayout.cshtml";
}
<script src="~/assets/js/jquery_datepicker_signup.js"></script>
@*<script src="~/assets/js/jquery-signup.js"></script>*@
<script type="text/javascript">
    function AddUserData() {
        
        var item = {
            "FirstName": $("#FirstName").val(),
            "LastName": $("#LastName").val(),
            "DateofBirth": $("#DateSelect").val().toLocaleString().substring(0, 10),
            "Email": $("#Email").val(),
            "PhoneNumber": $("#PhoneNumber").val(),
            "Password": $("#Password").val(),
            "InterestedKeywords": $("#InterestedKeywords").val(),
            "isActive": true
        };

        $.ajax({
            url: "/Home/Signup/",
            type: "POST",
            contentType: "application/json;charset=utf-8",
            data: JSON.stringify(item),
            dataType: "json",
            success: function (response) {
                if (response == "Success") {
                    var url = "/home/dashboard/"
                    document.location.href = url;
                }
                else {
                    alert("Signup Fail");
                }

            },

            error: function (x, e) {
                alert("Error");


            }
        });
    }
</script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                    </div>
                    <div class="space-6"></div>
                    @Html.AntiForgeryToken()
                    @if (ViewBag.Message != null)
                    {
                        <div style="border:solid 1px green">
                            @ViewBag.Message
                        </div>
                    }
                    <div class="position-relative">
                        <div id="signup-box" class="signup-box widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header green lighter bigger">
                                        <i class="ace-icon fa fa-users blue"></i>
                                        New User Registration
                                    </h4>
                                    <div class="space-6"></div>
                                    <p> Enter your details to begin: </p>


                                    <form id="form1">
                                        <fieldset>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.Email, new { @id = "Email", @class = "form-control", @placeholder = "E mail" })

                                                </span>
                                                @Html.ValidationMessageFor(a => a.Email)
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.PhoneNumber, new { @id = "PhoneNumber", @class = "form-control", @placeholder = "Number" })
                                                </span>
                                                @Html.ValidationMessageFor(a => a.PhoneNumber)
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.FirstName, new { @id = "FirstName", @class = "form-control", @placeholder = "First Name" })
                                                </span>
                                                @Html.ValidationMessageFor(a => a.FirstName)
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.LastName, new { @id = "LastName", @class = "form-control", @placeholder = "Last Name" })
                                                </span>
                                                @Html.ValidationMessageFor(a => a.LastName)
                                            </label>
                                            <div class="block clearfix">
                                                <div class="hero-unit">

                                                    @Html.TextBoxFor(a => a.DateOfBirth, new { @class = "form-control hasDatepicker", @placeholder = "Date of Birth", @id = "DateSelect", @name = "DateofBirth" })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(a => a.DateOfBirth)
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.PasswordFor(a => a.Password, new { @id = "Password", @class = "form-control", @placeholder = "Password" })
                                                </span>
                                                @Html.ValidationMessageFor(a => a.Password)
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(a => a.InterestedKeywords, new { @id = "InterestedKeywords", @class = "form-control", @placeholder = "Interested Keywords" })
                                                </span>
                                                @Html.ValidationMessageFor(a => a.InterestedKeywords)
                                            </label>
                                            <div class="space-6"></div>
                                            <div class="clearfix">
                                                <div>

                                                    <a href="~/Home/Login" class="user-signup-link">
                                                        <i class="ace-icon fa fa-arrow-left"></i> Back To login

                                                    </a>
                                                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary" id="btnSave" onclick="AddUserData(); return false;">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">Signup</span>
                                                    </button>
                                                </div>

                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="assets/js/jquery.2.1.1.min.js"></script>
}

